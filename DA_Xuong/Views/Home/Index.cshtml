    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
            color: orange;
        }
    </style>
<style>
    .img-container {
        display: flex;
        justify-content: space-around; /* Căn ảnh giữa */
        align-items: center; /* Căn ảnh theo chiều dọc */
        overflow-x: auto; /* Thêm thanh cuộn ngang khi cần thiết */
        white-space: nowrap; /* Ngăn các ảnh xuống dòng mới */
    }

        .img-container img {
            width: 150px; /* Điều chỉnh kích thước của ảnh tùy ý */
            height: auto; /* Giữ tỷ lệ khung hình */
            margin: 0 10px; /* Khoảng cách giữa các ảnh */
        }

    .project-item {
        position: relative;
        overflow: hidden;
        border-radius: 5px;
        width: 100%; 
        margin-bottom: 20px; 
    }

        .project-item img {
            width: 100%;
            height: 400px; /* Đặt chiều cao cố định cho các ảnh sách */
            object-fit: cover; /* Các ảnh sẽ được căn chỉnh sao cho vừa với kích thước của khung */
            transition: transform 0.3s;
            image-rendering: pixelated; /* Ngăn không cho ảnh bị mờ */
        }


    .project-info {
        background-color: rgba(255, 255, 255, 0.9);
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%; 
        padding: 10px;
        box-sizing: border-box;
        transition: transform 0.3s;
        transform: translateY(100%);
        opacity: 0; 
        pointer-events: none; 
    }

    .project-item:hover .project-info {
        transform: translateY(0);
        opacity: 1;
        pointer-events: auto; 
    }

    .project-item:hover img {
        transform: scale(1.1);
    }

    .project-item {
        transition: box-shadow 0.3s ease;
        border-radius: 10px;
    }

        .project-item:hover {
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        }

    .pagination-buttons {
        margin-top: 20px;
    }

        .pagination-buttons button {
            margin-right: 10px;
            background-color: white;
            color: green;
            border-color: green;
            border-radius: 5px;
        }

    .btnhv:hover {
        background-color: green;
        color: white;
        border-color: green;
        border-radius: 5px;
    }


</style>

