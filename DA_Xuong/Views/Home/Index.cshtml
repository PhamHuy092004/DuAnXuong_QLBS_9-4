                <div class="col-md-6"><p class="text-uppercase fw-bolder">Sách tâm lý</p></div>
                <div class="col-md-6"><p class="text-uppercase fw-bolder float-end">Tất cả >></p></div>
            </div>
            <hr style="border-top: 2px solid #000; width: 100%;" />

            @foreach (var project in Model)
            {
          
                <div class="col-md-3" style="margin-top:10px">
                <div class="project-item">
                    <img src="@Url.Content(project.HINHANH)" />
                    <div class="project-info">
                        <p class="text-uppercase fw-bolder">@project.TIEUDE</p>
                        @if (project != null)
                        {
                            <p>@(project.TacGia != null ? project.TacGia.TENTACGIA : "")</p>
                            <p>
                                @{
                                    // Kiểm tra độ dài của mô tả
                                    if (!string.IsNullOrEmpty(project.MOTA))
                                    {
                                        string shortDescription = project.MOTA.Length > 75 ? project.MOTA.Substring(0, 75) + "..." : project.MOTA;
                                        @shortDescription
                                    }
                                }
                            </p>
                        }
                        <p>Giá: <span class="text-danger fw-bolder">@project.GIA.ToString("#,##0")</span> đồng</p>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                        <n>(10,5k lượt mua)</n>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-outline-success me-2">Thêm sản phẩm</button>
                            <form action="@Url.Action("ChiTietSach", "ChiTietSach")" method="get">
                                <input type="hidden" name="id" value="@project.IDSACH" />
                                <button class="btn btn-outline-danger" type="submit">Chi tiết sản phẩm</button>
                            </form>
                        </div>

                    </div>
                </div>


                  
                </div>
        
                
