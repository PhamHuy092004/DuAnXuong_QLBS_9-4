@model IEnumerable<DA_Xuong.Models.SACH>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="w-100">
        <h4>Danh sách sách</h4>

        <table class="table table-bordered text-center table-striped w-100">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TIEUDE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IDTACGIA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GIA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NGAYXUATBAN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MOTA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SOLUONG)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TRANGTHAI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HINHANH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TacGia.IDTACGIA)
                    </th>
                    <th>
                        ACTION
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TIEUDE)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.IDTACGIA)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.GIA)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NGAYXUATBAN)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MOTA)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.SOLUONG)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TRANGTHAI)
                        </td>
                        <td class="align-middle">
                            <img src="@Html.DisplayFor(modelItem => item.HINHANH)" class="w-50 h-50" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.TacGia.IDTACGIA)
                        </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@item.IDSACH">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.IDSACH">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.IDSACH">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>