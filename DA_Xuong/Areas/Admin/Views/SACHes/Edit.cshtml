                    <span asp-validation-for="GIA" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 mt-3">
                    <label asp-for="NGAYXUATBAN" class="control-label"></label>
                    <input asp-for="NGAYXUATBAN" class="form-control" />
                    <span asp-validation-for="NGAYXUATBAN" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 mt-3">
                    <label asp-for="MOTA" class="control-label"></label>
