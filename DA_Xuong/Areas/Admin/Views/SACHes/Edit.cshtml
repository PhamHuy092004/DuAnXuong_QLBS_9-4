            <div class="row mt-3">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info text-white" />
                    <a asp-action="Index" class="btn btn-success text-white">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
